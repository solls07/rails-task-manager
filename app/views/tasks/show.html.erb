<h1><%= @task.title %></h1>
<button><%= link_to "Edit this task" , edit_task_path %></button>
<p><%= @task.details %></p>
<p><input type="checkbox" <%= @task.completed ? "checked" : "" %>><%= @task.completed ? "This task is completed" : "This task is not completed yet" %></p>

<p><%= link_to "Back to list", tasks_path %></p>
